<MyGrid>:
    foreground_data:foreground_data.__self__

	GridLayout:
		rows:6
		size: root.width-20, root.height-20
		pos: 10,10

		GridLayout:
			cols:1
			Label:
			    id:foreground_data
			    text:""
			    font_size:50

		GridLayout:
			cols:5
			Button:
				background_color:(0,0,1,1)
				text:"7"
				font_size:40
				on_press:root.pressed_num('7')
			Button:
				background_color:(0,0,1,1)
				text:"8"
				font_size:40
				on_press:root.pressed_num('8')
			Button:
				background_color:(0,0,1,1)
				text:"9"
				font_size:40
				on_press:root.pressed_num('9')
			Button:
				background_color:(0,0,1,1)
				text:"÷"
				font_size:40
				on_press:root.pressed_operator('/')
			Button:
				background_color:(0,0,1,1)
				text:"C"
				font_size:40
				on_press:root.pressed_C()

		GridLayout:
			cols:5
			Button:
				background_color:(0,0,1,1)
				text:"4"
				font_size:40
				on_press:root.pressed_num('4')
			Button:
				background_color:(0,0,1,1)
				text:"5"
				font_size:40
				on_press:root.pressed_num('5')
			Button:
				background_color:(0,0,1,1)
				text:"6"
				font_size:40
				on_press:root.pressed_num('6')
			Button:
				background_color:(0,0,1,1)
				text:"x"
				font_size:40
				on_press:root.pressed_operator('*')
			Button:
				background_color:(0,0,1,1)
				text:"√"
				font_size:40
				on_press:root.pressed_sroot()

		GridLayout:
			cols:5
			Button:
				background_color:(0,0,1,1)
				text:"1"
				font_size:40
				on_press:root.pressed_num('1')
			Button:
				background_color:(0,0,1,1)
				text:"2"
				font_size:40
				on_press:root.pressed_num('2')
			Button:
				background_color:(0,0,1,1)
				text:"3"
				font_size:40
				on_press:root.pressed_num('3')
			Button:
				background_color:(0,0,1,1)
				text:"-"
				font_size:40
				on_press:root.pressed_operator('-')
			Button:
				background_color:(0,0,1,1)
				text:"x²"
				font_size:40
				on_press:root.pressed_squared()

		GridLayout:
			cols:5
			Button:
				background_color:(0,0,1,1)
				text:"0"
				font_size:40
				on_press:root.pressed_num('0')
			Button:
				background_color:(0,0,1,1)
				text:"."
				font_size:40
				on_press:root.pressed_dot()
			Button:
				background_color:(0,0,1,1)
				text:"="
				font_size:40
				on_press:root.pressed_equals()
			Button:
				background_color:(0,0,1,1)
				text:"+"
				font_size:40
				on_press:root.pressed_operator('+')
			Button:
				background_color:(0,0,1,1)
				text:"Ans"
				font_size:40
				on_press:root.pressed_ans()
		GridLayout:
			cols:1
			Button:
				text:"Backspace"
				font_size:40
				background_color: (1,0,0, 1.0)
				on_press:root.backspace()
