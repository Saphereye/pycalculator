<MyGrid>:
    foreground_data:foreground_data.__self__

	GridLayout:
		rows:6
		size: root.width-20, root.height-20
		pos: 10,10

		GridLayout:
			cols:1
			Label:
			    id:foreground_data
			    text:""

		GridLayout:
			cols:5
			Button:
				background_color:(0,0,1,1)
				text:"7"
				on_press:root.pressed_num('7')
			Button:
				background_color:(0,0,1,1)
				text:"8"
				on_press:root.pressed_num('8')
			Button:
				background_color:(0,0,1,1)
				text:"9"
				on_press:root.pressed_num('9')
			Button:
				background_color:(0,0,1,1)
				text:"÷"
				on_press:root.pressed_operator('/')
			Button:
				background_color:(0,0,1,1)
				text:"C"
				on_press:root.pressed_C()

		GridLayout:
			cols:5
			Button:
				background_color:(0,0,1,1)
				text:"4"
				on_press:root.pressed_num('4')
			Button:
				background_color:(0,0,1,1)
				text:"5"
				on_press:root.pressed_num('5')
			Button:
				background_color:(0,0,1,1)
				text:"6"
				on_press:root.pressed_num('6')
			Button:
				background_color:(0,0,1,1)
				text:"x"
				on_press:root.pressed_operator('*')
			Button:
				background_color:(0,0,1,1)
				text:"√"
				on_press:root.pressed_sroot()

		GridLayout:
			cols:5
			Button:
				background_color:(0,0,1,1)
				text:"1"
				on_press:root.pressed_num('1')
			Button:
				background_color:(0,0,1,1)
				text:"2"
				on_press:root.pressed_num('2')
			Button:
				background_color:(0,0,1,1)
				text:"3"
				on_press:root.pressed_num('3')
			Button:
				background_color:(0,0,1,1)
				text:"-"
				on_press:root.pressed_operator('-')
			Button:
				background_color:(0,0,1,1)
				text:"x²"
				on_press:root.pressed_squared()

		GridLayout:
			cols:5
			Button:
				background_color:(0,0,1,1)
				text:"0"
				on_press:root.pressed_num('0')
			Button:
				background_color:(0,0,1,1)
				text:"."
				on_press:root.pressed_dot()
			Button:
				background_color:(0,0,1,1)
				text:"="
				on_press:root.pressed_equals()
			Button:
				background_color:(0,0,1,1)
				text:"+"
				on_press:root.pressed_operator('+')
			Button:
				background_color:(0,0,1,1)
				text:"Ans"
				on_press:root.pressed_ans()
		GridLayout:
			cols:1
			Button:
				text:"Backspace"
				background_color: (1,0,0, 1.0)
				on_press:root.backspace()